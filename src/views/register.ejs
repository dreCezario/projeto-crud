<!DOCTYPE html>
<html lang="en">
<%- include('partials/head.ejs') %>

<body>
    <h1><%= title %></h1>

    <form class="form-container" action="/register/add" method="post">
        <div>
            <label>Nome</label>
            <input type="text" class="form-input" name="name" placeholder="Digite o seu nome">
        </div>
        <div>
            <label>Idade</label>
            <input type="text" class="form-input" name="age" placeholder="Digite a sua idade">
        </div>
        <div>
            <label>Email</label>
            <input type="text" class="form-input" name="email" placeholder="Digite o seu email">
        </div>
        <div>
            <label>Senha</label>
            <input type="text" class="form-input" name="password" placeholder="Digite a sua senha">
        </div>
        <button type="submit" class="form-submit-button">Cadastrar</button>
    </form>

    <%- include('partials/foot.ejs') %>
</body>
</html>