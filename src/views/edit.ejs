<!DOCTYPE html>
<html lang="en">
<%- include('partials/head.ejs') %>

<body>
    <h1 class="title"><%= title %></h1>

    <%- include('partials/navbar.ejs') %>

    <% if (typeof message !== 'undefined') { %>
      <%= message %>
    <% } %>

    <form class="form-container" action="/edit/<%= user._id %>" method="post">
        <div>
            <label>Nome</label>
            <input type="text" class="form-input" name="name" placeholder="Digite o seu nome" value="<%= user.name %>">
        </div>
        <div>
            <label>Idade</label>
            <input type="text" class="form-input" name="age" placeholder="Digite a sua idade" value="<%= user.age %>">
        </div>
        <div>
            <label>Email</label>
            <input type="text" class="form-input" name="email" placeholder="Digite o seu email" value="<%= user.email %>">
        </div>
        <button type="submit" class="form-submit-button">Editar</button>
    </form>

    <%- include('partials/foot.ejs') %>
</body>
</html>